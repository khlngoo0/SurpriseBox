<h2>–°–æ–Ω–≥–æ—Ö —Ö–∞–π—Ä—Ü–≥–∞–∞ –¥–∞—Ä–∂ –±—ç–ª–≥—ç—ç –≥–∞—Ä–≥–∞–∞—Ä–∞–π!</h2>

<div class="container">
  <div class="box" onclick="openBox(this,0)">
    <div class="inner-box">
      <div class="front">Box 1</div>
      <div class="back"></div>
    </div>
  </div>
  <div class="box" onclick="openBox(this,1)">
    <div class="inner-box">
      <div class="front">Box 2</div>
      <div class="back"></div>
    </div>
  </div>
  <div class="box" onclick="openBox(this,2)">
    <div class="inner-box">
      <div class="front">Box 3</div>
      <div class="back"></div>
    </div>
  </div>
  <div class="box" onclick="openBox(this,3)">
    <div class="inner-box">
      <div class="front">Box 4</div>
      <div class="back"></div>
    </div>
  </div>
</div>

<div id="message" class="message"></div>
<button id="shareBtn" onclick="sharePrize()">Share Your Prize</button>
<button id="resetBtn" onclick="resetTest()">Reset for Testing</button>

<script>
  const userName = localStorage.getItem("userName");
  const adminName = "ADMIN";

  if (!userName) {
    alert("Access denied!");
    window.location.href = "index.html";
  }

  // Gifts with emojis
  const giftsMap = {
    "DUUREE": [
      {text: "–£—É–ª–∑–∞—Ö —ç—Ä—Ö", emoji: "üéâ"},
      {text: "–ó—É—Ä–∞–≥ –¥–∞—Ä—É—É–ª–∞—Ö —ç—Ä—Ö", emoji: "üì∏"},
      {text: "–•–æ–æ–ª —Ü—É–≥ –∏–¥—ç—Ö —ç—Ä—Ö", emoji: "üçîüçï"},
      {text: "–¶—É–≥ –∫–æ—Ñ–µ —à–æ–ø –æ—Ä–æ—Ö —ç—Ä—Ö", emoji: "‚òï"}
    ],
    "TOM": [
      {text: "–£—É–ª–∑–∞—Ö —ç—Ä—Ö", emoji: "üéâ"},
      {text: "–ó—É—Ä–∞–≥ –¥–∞—Ä—É—É–ª–∞—Ö —ç—Ä—Ö", emoji: "üì∏"},
      {text: "–•–æ–æ–ª —Ü—É–≥ –∏–¥—ç—Ö —ç—Ä—Ö", emoji: "üçîüçï"},
      {text: "–¶—É–≥ –∫–æ—Ñ–µ —à–æ–ø –æ—Ä–æ—Ö —ç—Ä—Ö", emoji: "‚òï"}
    ],
    "ADMIN": [
      {text: "–£—É–ª–∑–∞—Ö —ç—Ä—Ö", emoji: "üéâ"},
      {text: "–ó—É—Ä–∞–≥ –¥–∞—Ä—É—É–ª–∞—Ö —ç—Ä—Ö", emoji: "üì∏"},
      {text: "–•–æ–æ–ª —Ü—É–≥ –∏–¥—ç—Ö —ç—Ä—Ö", emoji: "üçîüçï"},
      {text: "–¶—É–≥ –∫–æ—Ñ–µ —à–æ–ø –æ—Ä–æ—Ö —ç—Ä—Ö", emoji: "‚òï"}
    ]
  };

  const gifts = giftsMap[userName];

  let boxOpened = false;
  let prize = "";

  // Show reset button only for ADMIN
  if(userName === adminName){
    document.getElementById("resetBtn").style.display = "inline-block";
  }

  function createConfetti(){
    for(let i=0;i<50;i++){
      const confetti = document.createElement("div");
      confetti.className="confetti";
      confetti.style.left = Math.random()*window.innerWidth+"px";
      confetti.style.backgroundColor = `hsl(${Math.random()*360}, 100%, 50%)`;
      document.body.appendChild(confetti);
      setTimeout(()=>confetti.remove(),2000);
    }
  }

  function openBox(boxElement,index){
    const backDiv = boxElement.querySelector(".back");

    if(boxOpened && userName !== adminName) return;

    const boxGift = gifts[index];
    backDiv.innerText = `${boxGift.text} ${boxGift.emoji}`;
    boxElement.classList.add("flipped");
    prize = `${boxGift.text} ${boxGift.emoji}`;

    if(userName === adminName){
      document.getElementById("message").innerText = "Admin view: " + prize;
    } else {
      document.getElementById("message").innerText = "Congratulations! You got: " + prize;
      boxOpened = true;

      const boxes = document.querySelectorAll(".box");
      boxes.forEach(b => b.style.pointerEvents="none");

      createConfetti();
    }

    document.getElementById("shareBtn").style.display="inline-block";
  }

  function sharePrize(){
    const shareText = `I just opened my lucky box and got: ${prize}! üéâ`;
    if(navigator.share){
      navigator.share({text: shareText}).catch(err=>alert("Sharing failed"));
    } else {
      prompt("Copy your prize:",shareText);
    }
  }

  function resetTest(){
    localStorage.removeItem("hasTried");
    localStorage.removeItem("userName");
    alert("Test reset! You can reload the page to try again.");
    location.reload();
  }
</script>

</body>
</html>
