      overflow: hidden;
    }

    h2 {
      margin-bottom: 20px;
      text-align: center;
    }

    .container {
      display: grid;
      grid-template-columns: repeat(2, 150px);
      grid-gap: 20px;
      margin-bottom: 20px;
    }

    .box {
      width: 150px;
      height: 150px;
      perspective: 1000px;
      cursor: pointer;
      position: relative;
    }

    .inner-box {
      width: 100%;
      height: 100%;
      text-align: center;
      transition: transform 0.8s;
      transform-style: preserve-3d;
      border-radius: 12px;
      position: absolute;
    }

    .box.flipped .inner-box {
      transform: rotateY(180deg);
    }

    .front, .back {
      position: absolute;
      width: 150px;
      height: 150px;
      border-radius: 12px;
      display: flex;
      justify-content: center;
      align-items: center;
      backface-visibility: hidden;
      font-weight: bold;
      font-size: 18px;
      text-align: center;
      padding: 10px;
    }

    .front {
      background: #ffcc00;
    }

    .back {
      background: #90ee90;
      transform: rotateY(180deg);
      font-size: 18px;
    }

    .message {
      font-size: 20px;
      font-weight: bold;
      color: green;
      margin-top: 10px;
